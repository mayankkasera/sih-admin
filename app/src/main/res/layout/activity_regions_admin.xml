<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bytewalker.sihadmin.RegionsAdminActivity">


    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/search_region_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:imeOptions="actionSearch"
        android:lines="1"
        android:inputType="textShortMessage"
        android:textColorLink="@android:color/holo_red_light"
        android:hint="Search Admin here"


        android:padding="10dp"/>
    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/search_region_txt"
        android:id="@+id/regions_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>
