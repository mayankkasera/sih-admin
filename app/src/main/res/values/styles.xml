<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditTextWhiteText" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
    </style>

    <style name="mythem" parent="AppTheme">
        <item name="colorPrimary">@color/Dialog</item>
        <item name="colorPrimaryDark">@color/Dialog</item>
        <item name="colorAccent">@color/Dialog</item>
        <item name="textColorError">@color/Dialog</item>

        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/Dialog</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->

        <item name="colorControlNormal">@color/Dialog</item>
        <item name="colorControlActivated">@color/Dialog</item>

    </style>

</resources>
